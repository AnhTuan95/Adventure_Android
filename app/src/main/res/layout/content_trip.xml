<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/rlContentTrip"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:context="studio.crazybt.adventure.activities.TripActivity"
                tools:showIn="@layout/app_bar_trip">

    <android.support.design.widget.TabLayout
        android:id="@+id/tlTrip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tbTrip"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:tabSelectedTextColor="@color/primary"
        app:tabTextColor="@color/primary_background_content"
        app:tabMode="scrollable"
        android:elevation="@dimen/line2"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vpTrip"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/tlTrip"
        android:background="@color/primary_background_content"/>


</RelativeLayout>