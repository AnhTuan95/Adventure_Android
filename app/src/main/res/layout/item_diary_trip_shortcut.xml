<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvDiaryTripShortcut"
    android:layout_width="match_parent"
    android:layout_height="@dimen/background_image_height"
    android:layout_marginBottom="@dimen/margin_medium"
    android:background="@color/white"
    android:elevation="@dimen/margin_medium">

    <RelativeLayout
        android:id="@+id/rlDiaryTripShortcut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivBackgroundDiaryShortcut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/img_cover"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/secondary_text70"/>

        <TextView
            android:id="@+id/tvNameDiaryShortcut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium"
            android:text="Đi đi lại lại Hà Nội - Sài Gòn 15/08 - 15/09"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_medium"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvAuthorDiaryShortcut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNameDiaryShortcut"
            android:layout_marginLeft="@dimen/margin_big"
            android:layout_marginTop="@dimen/margin_small"
            android:text="Brucelee Thanh"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tvDateDiaryShortcut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_big"
            android:paddingBottom="@dimen/margin_medium"
            android:text="10:30 30/09/2016"
            android:textColor="@color/white"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>